    "@solana/web3.js": "^1.95.0",
    "borsh": "^2.0.0",
    "bs58": "^6.0.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bs58": "^5.0.0",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
